{
  "name": "zen-sync",
  "version": "1.0.0",
  "description": "Cross-platform Zen Browser profile sync tool with NAS support",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun run --watch index.ts",
    "build": "bun build index.ts --outdir ./dist --target node",
    "build:exe": "bun build index.ts --compile --outfile ./dist/zen-sync",
    "build:exe:all": "mkdir -p dist && bun build index.ts --compile --outfile ./dist/zen-sync-linux-x64 --target bun-linux-x64 && bun build index.ts --compile --outfile ./dist/zen-sync-win32-x64 --target bun-windows-x64 && bun build index.ts --compile --outfile ./dist/zen-sync-darwin-x64 --target bun-darwin-x64 && bun build index.ts --compile --outfile ./dist/zen-sync-darwin-arm64 --target bun-darwin-arm64",
    "build:exe:win": "bun build index.ts --compile --outfile ./dist/zen-sync-win32-x64 --target bun-windows-x64",
    "build:exe:linux": "bun build index.ts --compile --outfile ./dist/zen-sync-linux-x64 --target bun-linux-x64",
    "build:exe:macos": "bun build index.ts --compile --outfile ./dist/zen-sync-darwin-x64 --target bun-darwin-x64",
    "build:exe:macos-arm": "bun build index.ts --compile --outfile ./dist/zen-sync-darwin-arm64 --target bun-darwin-arm64",
    "type-check": "bun run --bun tsc --noEmit"
  },
  "keywords": [
    "zen-browser",
    "profile-sync",
    "nas",
    "backup",
    "cross-platform"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "enquirer": "^2.4.1",
    "fast-glob": "^3.3.2",
    "ini": "^4.1.3",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/node": "^22.0.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
